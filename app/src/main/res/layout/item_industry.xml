<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_industry_name"
        style="@style/YsDisplayRegular16"
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="?attr/text_color"
        tools:text="Производство и продажа высококачественных компонентов для электронной промышленности, включая полупроводники, микросхемы, диоды, транзисторы, конденсаторы, резисторы и другие пассивные компоненты, а также разработка и производство программного обеспечения для управления и мониторинга электронных устройств и систем" />

    <RadioButton
        android:id="@+id/btn_radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="?attr/blue" />
</LinearLayout>
