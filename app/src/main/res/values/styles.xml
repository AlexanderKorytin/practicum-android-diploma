<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextStyle">
        <item name="android:letterSpacing">@dimen/_0</item>
    </style>

    <style name="YsDisplayBold32" parent="TextStyle">
        <item name="fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">@dimen/_32sp</item>
    </style>

    <style name="YsDisplayMedium22" parent="TextStyle">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/_22sp</item>
    </style>

    <style name="YsDisplayMedium16" parent="TextStyle">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="YsDisplayregular16" parent="TextStyle">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="YsDisplayregular12" parent="TextStyle">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/_12sp</item>
    </style>

    <!-- team fragment -->
    <style name="team_fragment_tv_members">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textColor">?attr/text_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
