<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextStyle">
        <item name="android:letterSpacing">@dimen/_0</item>
    </style>

    <style name="YsDisplayBold32" parent="TextStyle">
        <item name="fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">@dimen/_32sp</item>
    </style>

    <style name="YsDisplayMedium22" parent="TextStyle">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/_22sp</item>
    </style>

    <style name="YsDisplayMedium16" parent="TextStyle">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="YsDisplayRegular16" parent="TextStyle">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="YsDisplayRegular12" parent="TextStyle">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/_12sp</item>
    </style>

    <!-- team fragment -->
    <style name="team_fragment_tv_members">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textColor">?attr/text_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="apply_button_style">
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/white_universal</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:backgroundTint">?attr/blue</item>
        <item name="cornerRadius">@dimen/_12dp</item>
    </style>

</resources>
